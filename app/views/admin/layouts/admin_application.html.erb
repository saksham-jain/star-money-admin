<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width", initial-scale=1>
        
    <title>Star Money Admin</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'admin_application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'admin_application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag "https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons" %>
  </head>

  <body>
  
    <% if current_admin_admin_user %>
      <%= render 'admin/layouts/sidebar' %>
      <div class='main-panel'>
        <%= render 'admin/layouts/navigation_bar' %> 
      </div>
    <% end %>
    <%= toastr_flash %>
    <%= yield %>
  </body>
  <script>
    $(document).on('turbolinks:load', function(){
      if(<%= @msg.present? %>) {
        md.showNotification('bottom', 'right')
      }
    })
  </script>
</html>
