<div class="main-panel"> 
  <div class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-12">
          <div class="card">
            <div class="card-header card-header-primary">
              <h4 class="card-title"><%= params[:action].capitalize %> Client</h4>
              <p class="card-category">Complete profile</p>
            </div>
            <div class="card-body">
              <%= form_for(@client, url: admin_clients_path) do |f| %>
                <div class="row">
                  <div class="col-md-6">
                    <div class="form-group">
                      <%= f.label :reliance_client_code, class: 'bmd-label-floating' %>
                      <%= f.text_field :reliance_client_code, autofocus: true, autocomplete: "email", class: 'form-control' %>
                    </div>
                  </div>

                  <div class="col-md-6">
                    <div class="form-group">
                      <%= f.label :reliance_client_id, class: 'bmd-label-floating' %>
                      <%= f.text_field :reliance_client_id, autofocus: true, autocomplete: "email", class: 'form-control' %>
                    </div>
                  </div>
                </div>
                
                <div class="row">
                  <div class="col-md-6">
                    <div class="form-group"> 
                      <%= f.label :first_name, class: 'bmd-label-floating' %>
                      <%= f.text_field :first_name, autofocus: true, autocomplete: "email", class: 'form-control' %>
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-group">
                      <%= f.label :last_name, class: 'bmd-label-floating' %>
                      <%= f.text_field :last_name, autofocus: true, autocomplete: "email", class: 'form-control' %>
                    </div>
                  </div>
                </div>

                <div class="row">
                  <div class="col-md-6">
                    <div class="form-group">
                      <%= f.label :email, class: 'bmd-label-floating' %>
                      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-group">
                      <%= f.label :phone_number, class: 'bmd-label-floating' %>
                      <%= f.text_field :phone_number, autofocus: true, autocomplete: "email", class: 'form-control' %>
                    </div>
                  </div>
                </div>

                <div class="row">
                  <div class="col-md-6">
                    <div class="form-group">
                      <%= f.label :pan, class: 'bmd-label-floating' %>
                      <%= f.text_field :pan, autofocus: true, autocomplete: "email", class: 'form-control' %>
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-group">
                      <%= f.label :city, class: 'bmd-label-floating' %>
                      <%= f.text_field :city, autofocus: true, autocomplete: "email", class: 'form-control' %>
                    </div>
                  </div>
                </div>
                <%= f.submit "Submit", class: "btn btn-primary pull-right" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>