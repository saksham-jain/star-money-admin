<body class="">
    <div class="main-panel">
<div class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-7">
        <div class="card card-profile">
          <div class="card-body">
            <h6 class="card-category text-gray h3"><%= @client.full_name %></h6>
            <div class="card-body">
              <div class="table-responsive">
                <table class="table">
                  <tbody>
                    <tr></tr>
                    <tr>
                      <th>Reliance ID</th>
                      <td><%= @client.reliance_client_code %></td>
                    </tr>

                    <tr>
                      <th>First Name</th>
                      <td><%= @client.first_name %></td>
                    </tr>

                    <tr>
                      <th>Email</th>
                      <td><%= @client.email %></td>
                    </tr>

                    <tr>
                      <th>Phone</th>
                      <td><%= @client.phone_number %></td>
                    </tr>

                    <tr>
                      <th>PAN</th>
                      <td><%= @client.pan %></td>
                    </tr>

                    <tr>
                      <th>City</th>
                      <td><%= @client.city %></td>
                    </tr>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-5">
        <div class="card card-profile">
          <div class="card-body">
            <div class="card-body">
              <div class="table-responsive">
                <table class="table">
                  <tbody>
                    <tr></tr>
                    <tr>
                      <th>Sign in Count</th>
                      <td><%= @client.sign_in_count %></td>
                    </tr>

                    <tr>
                      <th>Last Login at</th>
                      <td><%= format_datetime(@client.last_sign_in_at) || '-' %></td>
                    </tr>
                    <% @last_trade = @client.trades.last %>
                    <tr>
                      <th>Last Trade</th>
                      <td><%= @last_trade.scrip %></td>
                    </tr>

                    <tr>
                      <th>Last Trade Value</th>
                      <td><%= @last_trade.quantity * @last_trade.price %></td>
                    </tr>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
