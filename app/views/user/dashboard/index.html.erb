      </div>
    </div>
  <%= render 'user/upcomings/invest_now_form' %>
  <%= render 'user/layouts/footer', background_color: 'black' %>
  </div>
  <!--   Core JS Files   -->
  <script>
    $(document).on(function() {
      nowuiKit.initSliders();
    });
    window.scEmbedController.load()

    $('.scroll').click(function(){
      var element = document.querySelector("#ipo");
      element.scrollIntoView({ behavior: 'smooth'});
    })

    function investNow(requestFor){
      $('#invest_now').toggle();
      var modalTitle = `Please provide following details to start opening new <b>${humanize(requestFor)}</b>`
      $('.modal-title').html(`${modalTitle}`);
      $('<input>', { type: 'hidden', name: 'invest_now[request_for]', value: requestFor }).appendTo('form');
    }

    function humanize(str) {
      var i, frags = str.split('_');
      for (i=0; i<frags.length; i++) {
        frags[i] = frags[i].charAt(0).toUpperCase() + frags[i].slice(1);
      }
      return frags.join(' ');
    }

    $(document).ready(function() {
      $('.number-field').keypress(function (event) {
        return isNumber(event, this)
      });
    });

    function isNumber(evt, element) {
      var charCode = (evt.which) ? evt.which : event.keyCode

      if (
        (charCode < 48 || charCode > 57)) {
          return false;
      }

      return true;
    };


  </script>

</body>

</html>
