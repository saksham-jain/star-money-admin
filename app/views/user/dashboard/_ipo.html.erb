<%
=begin%>
 <h4 class='bold' style= 'display: flex; justify-content: center;' id='ipo'>Exciting upcoming IPOs</h4>
<div style='padding:5px;'><iframe src="https://www.chittorgarh.com/ipo/ipo_gadgets_live.asp" style="border:none;overflow:hidden;width:100%;height:400px;"></iframe></div> 
<%
=end%>

<div class="col-lg-12 col-sm-12">
  <div class="card">
    <div class="card-header card-header-info">
      <h5 class="center mt-3 text-info mb-0 font-italic font-weight-bold">Uncoming Exciting IPOs</h5>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Name</th>
              <th>Exchange</th>
              <th>Open</th>
              <th>Close</th>
              <th>Lot Size</th>
              <th>Issue Price</th>
              <th>Issue Size</th>

            </tr>
          </thead>
          <tbody>
            <% @ipos.each do |scrip| %>
              <tr style="background-color: <%= scrip[:open_now] == true ? 'lightgreen' : 'white' %>">
                <td><%= scrip[:name] %></td>
                <td><%= scrip[:exchange] %></td>
                <td><%= scrip[:open] %></td>
                <td><%= scrip[:close] %></td>
                <td><%= scrip[:lot_size] %></td>
                <td><%= scrip[:issue_price] %></td>
                <td><%= scrip[:issue_size] %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
</div>

<hr class='hr-style'>
