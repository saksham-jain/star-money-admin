<div class="col-lg-12 center">
  <div class="col-sm-6">
  <div class="card card-chart">
    <div class="card-header card-header-info">
      <h5 class="mt-3 ml-4 text-info mb-0 font-italic font-weight-bold center">Today's Top <%= top_traded_scrips.count %> Traded Scrips in Star Money</h5>
    </div>
      <div class="card-body table-responsive">
      <table class="table table-hover">
        <tbody>
          <% if top_traded_scrips.present? %>
            <% top_traded_scrips.each do |scrip| %>
              <tr>
                <td><%= scrip[0] %></td>
              </tr>
            <% end %>
          <% else %>
            <div class='center'>Will be update after 3:30 on trading days</div>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
