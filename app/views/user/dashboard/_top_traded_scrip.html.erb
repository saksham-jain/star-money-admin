<div class="col-lg-12 center">
  <div class="col-sm-6">
  <div class="card card-chart">
    <div class="card-header card-header-info">
      <h5 class="mt-3 ml-4 text-info mb-0 font-italic font-weight-bold">Todays Top <%= top_traded_scrips.count %> Traded Scrip in Star Money</h5>
    </div>
      <div class="card-body table-responsive">
      <table class="table table-hover">
        <tbody>
          <% top_traded_scrips.each do |scrip| %>
            <tr>
              <td><%= scrip[0] %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
